set -e

tarball=$1

# Remove installed package
rm -rf ${assets_folder}/node_modules/@rero

if test -z "$tarball"; then
    echo 'No tarball file provided, standard installation from package.json'
    pipenv run invenio webpack create
fi

# Install dependencies
pipenv run invenio webpack install $tarball

# Store folder path
assets_folder=$(pipenv run invenio shell --no-term-title -c "print(app.config.get('WEBPACKEXT_PROJECT_BUILDDIR'))")
static_folder=$(pipenv run invenio shell --no-term-title -c "print('static_folder:%s' % app.static_folder)"|grep static_folder| cut -d: -f2-)

# Copy sonar-ui files to static folder to use it with flask-assets
mkdir -p ${static_folder}/sonar-ui
cp -R ${assets_folder}/node_modules/@rero/sonar-ui/dist/sonar/* ${static_folder}/sonar-ui

echo "Install UI finished!"
