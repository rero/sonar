{
  "index_patterns": "*",
  "settings": {
    "analysis": {
      "filter": {
        "autocomplete_filter": {
          "type": "edge_ngram",
          "min_gram": 1,
          "max_gram": 20
        }
      },
      "tokenizer": {
        "char_group_tokenizer": {
          "type": "char_group",
          "tokenize_on_chars": [
            "whitespace",
            "punctuation"
          ]
        }
      },
      "analyzer": {
        "default": {
          "type": "custom",
          "tokenizer": "char_group_tokenizer",
          "filter": [
            "lowercase",
            "icu_folding",
            "german_normalization"
          ]
        },
        "custom_keyword": {
          "type": "custom",
          "tokenizer": "keyword",
          "filter": [
            "lowercase",
            "icu_folding",
            "german_normalization"
          ]
        },
        "autocomplete": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": [
            "lowercase",
            "autocomplete_filter"
          ]
        }
      }
    }
  }
}
