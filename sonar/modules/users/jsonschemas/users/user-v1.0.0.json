{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://sonar.ch/schemas/users/user-v1.0.0.json",
  "additionalProperties": false,
  "title": "User",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "default": "https://sonar.ch/schemas/users/user-v1.0.0.json"
    },
    "pid": {
      "title": "Identifier",
      "type": "string",
      "minLength": 1
    },
    "full_name": {
      "title": "First name and last name",
      "type": "string",
      "minLength": 1,
      "form": {
        "placeholder": "Example: John Doe"
      }
    },
    "birth_date": {
      "title": "Date of birth",
      "description": "Date in yyyy-mm-dd format, ex: 1970-01-01",
      "type": "string",
      "format": "date",
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
    },
    "email": {
      "title": "Email",
      "type": "string",
      "format": "email",
      "pattern": "^.+@.+\\..+$",
      "form": {
        "validation": {
          "validators": {
            "valueAlreadyExists": {}
          },
          "messages": {
            "pattern": "Email should have at least one `@` and  one `.`."
          }
        }
      }
    },
    "street": {
      "title": "Street",
      "description": "Street and number of the address, separated by a coma.",
      "type": "string",
      "minLength": 1
    },
    "postal_code": {
      "title": "Postal code",
      "type": "string",
      "minLength": 4
    },
    "city": {
      "title": "City",
      "type": "string",
      "minLength": 1
    },
    "phone": {
      "title": "Phone number",
      "description": "Phone number with the international prefix, without spaces.",
      "type": "string",
      "pattern": "^\\+[0-9]+$"
    },
    "organisation": {
      "type": "object",
      "properties": {
        "$ref": {
          "title": "Organisation",
          "type": "string",
          "pattern": "^https://sonar.ch/api/organisations/.*?$",
          "form": {
            "remoteOptions": {
              "type": "organisations"
            }
          }
        }
      },
      "required": [
        "$ref"
      ]
    },
    "role": {
      "title": "Role",
      "type": "string",
      "minLength": 1,
      "enum": [
        "superuser",
        "admin",
        "moderator",
        "submitter",
        "user"
      ],
      "form": {
        "options": [
          {
            "label": "role_superuser",
            "value": "superuser"
          },
          {
            "label": "role_admin",
            "value": "admin"
          },
          {
            "label": "role_moderator",
            "value": "moderator"
          },
          {
            "label": "role_submitter",
            "value": "submitter"
          },
          {
            "label": "role_user",
            "value": "user"
          }
        ]
      }
    }
  },
  "propertiesOrder": [
    "organisation",
    "role",
    "full_name",
    "email",
    "phone",
    "birth_date",
    "street",
    "postal_code",
    "city"
  ],
  "required": [
    "full_name",
    "email",
    "role",
    "$schema"
  ]
}
