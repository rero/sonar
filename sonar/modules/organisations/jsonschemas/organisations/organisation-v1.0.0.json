{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://sonar.ch/schemas/organisations/organisation-v1.0.0.json",
  "additionalProperties": false,
  "title": "Organisation",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "default": "https://sonar.ch/schemas/organisations/organisation-v1.0.0.json"
    },
    "pid": {
      "title": "Identifier",
      "type": "string",
      "minLength": 1
    },
    "code": {
      "title": "Code",
      "description": "At least 3 characters and must contain only lower case characters and underscores.",
      "type": "string",
      "pattern": "^[a-z0-9_]{3,}$",
      "minLength": 3,
      "form": {
        "hideExpression": "field.model.pid",
        "validation": {
          "validators": {
            "valueAlreadyExists": {}
          }
        }
      }
    },
    "name": {
      "title": "Name",
      "type": "string",
      "minLength": 1
    }
  },
  "propertiesOrder": [
    "code",
    "name"
  ],
  "required": [
    "pid",
    "name",
    "code",
    "$schema"
  ]
}
