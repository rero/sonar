{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://sonar.ch/schemas/deposits/deposit-v1.0.0.json",
  "title": "SONAR deposit v1.0.0",
  "type": "object",
  "required": [
    "pid"
  ],
  "properties": {
    "$schema": {
      "type": "string",
      "default": "https://sonar.ch/schemas/deposits/deposit-v1.0.0.json"
    },
    "pid": {
      "title": "Identifier",
      "type": "string",
      "minLength": 1
    },
    "_bucket": {
      "title": "Bucket UUID",
      "type": "string",
      "minLength": 1
    },
    "_files": {
      "title": "Files",
      "description": "List of files attached to the record.",
      "type": "array",
      "items": {
        "title": "File item",
        "description": "Describes the information of a single file in the record.",
        "additionalProperties": false,
        "properties": {
          "bucket": {
            "title": "Bucket UUID",
            "type": "string",
            "minLength": 1
          },
          "file_id": {
            "title": "File UUID",
            "type": "string",
            "minLength": 1
          },
          "version_id": {
            "title": "Version UUID",
            "type": "string",
            "minLength": 1
          },
          "key": {
            "title": "Key",
            "type": "string",
            "minLength": 1
          },
          "checksum": {
            "title": "Checksum",
            "description": "MD5 checksum of the file.",
            "type": "string",
            "minLength": 1
          },
          "size": {
            "title": "Size",
            "description": "Size of the file in bytes.",
            "type": "integer"
          },
          "label": {
            "title": "Label",
            "type": "string",
            "minLength": 1
          },
          "category": {
            "title": "Type",
            "type": "string",
            "enum": [
              "main",
              "additional"
            ],
            "default": "main"
          },
          "type": {
            "title": "Type",
            "type": "string",
            "enum": [
              "file",
              "fulltext",
              "thumbnail"
            ],
            "default": "file"
          },
          "embargo": {
            "title": "Embargo",
            "type": "boolean",
            "default": false
          },
          "embargoDate": {
            "title": "Embargo date",
            "type": "string",
            "format": "date",
            "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}?$"
          },
          "exceptInOrganisation": {
            "title": "Except within organisation",
            "type": "boolean",
            "default": false
          }
        },
        "required": [
          "bucket",
          "file_id",
          "version_id",
          "key"
        ],
        "type": "object"
      }
    },
    "user": {
      "title": "User",
      "type": "object",
      "required": [
        "$ref"
      ],
      "additionalProperties": false,
      "properties": {
        "$ref": {
          "title": "User",
          "type": "string",
          "pattern": "^https://sonar.ch/api/users/.*?$",
          "minLength": 1
        }
      }
    },
    "status": {
      "title": "Status",
      "type": "string",
      "default": "in_progress",
      "enum": [
        "in_progress",
        "to_validate",
        "validated",
        "rejected",
        "ask_for_changes"
      ],
      "form": {
        "options": [
          {
            "label": "deposit_status_in_progress",
            "value": "in_progress"
          },
          {
            "label": "deposit_status_to_validate",
            "value": "to_validate"
          },
          {
            "label": "deposit_status_validated",
            "value": "validated"
          },
          {
            "label": "deposit_status_rejected",
            "value": "rejected"
          },
          {
            "label": "deposit_status_ask_for_changes",
            "value": "ask_for_changes"
          }
        ]
      }
    },
    "step": {
      "title": "Step",
      "description": "Current cataloguing step.",
      "type": "string",
      "enum": [
        "create",
        "metadata",
        "contributors",
        "projects",
        "diffusion"
      ]
    },
    "logs": {
      "title": "Logs",
      "type": "array",
      "minItems": 1,
      "items": {
        "title": "Log",
        "type": "object",
        "required": [
          "user",
          "action",
          "date"
        ],
        "additionalProperties": false,
        "properties": {
          "user": {
            "title": "User",
            "type": "object",
            "properties": {
              "$ref": {
                "title": "User",
                "type": "string",
                "pattern": "^https://sonar.ch/api/users/.*?$",
                "minLength": 1
              }
            }
          },
          "action": {
            "title": "Action",
            "type": "string",
            "enum": [
              "submit",
              "approve",
              "reject",
              "ask_for_changes"
            ],
            "form": {
              "options": [
                {
                  "label": "deposit_log_action_submit",
                  "value": "submit"
                },
                {
                  "label": "deposit_log_action_approve",
                  "value": "approve"
                },
                {
                  "label": "deposit_log_action_reject",
                  "value": "reject"
                },
                {
                  "label": "deposit_log_action_ask_for_changes",
                  "value": "ask_for_changes"
                }
              ]
            }
          },
          "date": {
            "title": "Date",
            "type": "string",
            "minLength": 1
          },
          "comment": {
            "title": "Comment",
            "type": "string",
            "minLength": 1
          }
        }
      }
    },
    "metadata": {
      "type": "object",
      "required": [
        "language",
        "title",
        "documentType"
      ],
      "propertiesOrder": [
        "documentType",
        "title",
        "subtitle",
        "otherLanguageTitle",
        "language",
        "documentDate",
        "publication",
        "dissertation",
        "otherElectronicVersions",
        "specificCollections",
        "classification",
        "abstracts",
        "subjects"
      ],
      "properties": {
        "documentType": {
          "$ref": "type-v1.0.0.json"
        },
        "title": {
          "title": "Title",
          "type": "string",
          "minLength": 1,
          "form": {
            "type": "textarea",
            "rows": 2
          }
        },
        "subtitle": {
          "title": "Subtitle",
          "type": "string",
          "minLength": 1
        },
        "otherLanguageTitle": {
          "title": "Title in other language",
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "title": {
              "title": "Title",
              "type": "string",
              "minLength": 1
            },
            "language": {
              "$ref": "language-v1.0.0.json"
            }
          }
        },
        "language": {
          "$ref": "language-v1.0.0.json"
        },
        "documentDate": {
          "title": "Document date",
          "description": "This field corresponds to the exact publication date of the article, if known.",
          "type": "string",
          "minLength": 1,
          "pattern": "^[0-9]{4}(-[0-9]{2}-[0-9]{2})?$",
          "form": {
            "placeholder": "Example: 2019 or 2019-05-05"
          }
        },
        "publication": {
          "title": "Part of (host document)",
          "type": "object",
          "required": [
            "publishedIn",
            "year"
          ],
          "additionalProperties": false,
          "propertiesOrder": [
            "publishedIn",
            "year",
            "volume",
            "number",
            "pages",
            "publisher",
            "editors"
          ],
          "properties": {
            "publishedIn": {
              "title": "Document",
              "description": "Host document, for example a journal for an article, or a book for a book chapter.",
              "type": "string",
              "minLength": 1
            },
            "year": {
              "title": "Year",
              "type": "string",
              "minLength": 1
            },
            "volume": {
              "title": "Volume",
              "type": "string",
              "minLength": 1,
              "hideExpression": "!['coar:c_beb9', 'coar:c_6501', 'coar:c_998f', 'coar:c_dcae04bc'].includes(field.parent.parent.model.documentType)"
            },
            "number": {
              "title": "Number",
              "type": "string",
              "minLength": 1,
              "hideExpression": "!['coar:c_beb9', 'coar:c_6501', 'coar:c_998f', 'coar:c_dcae04bc'].includes(field.parent.parent.model.documentType)"
            },
            "pages": {
              "title": "Pages",
              "type": "string",
              "minLength": 1,
              "pattern": "^[0-9]+(-[0-9]+)?$",
              "form": {
                "placeholder": "Examples: 135, 5-27, â€¦"
              }
            },
            "editors": {
              "title": "Editors",
              "description": "In the format \"Last name, First name\". For example, \"Doe, John\"",
              "type": "array",
              "items": {
                "type": "string",
                "minLength": 1,
                "pattern": "^[^,]+, [^,]+$"
              }
            },
            "publisher": {
              "title": "Publisher",
              "type": "string",
              "minLength": 1
            }
          },
          "hideExpression": "!['coar:c_3248', 'coar:c_5794', 'coar:c_6670', 'coar:c_beb9', 'coar:c_6501', 'coar:c_998f', 'coar:c_dcae04bc'].includes(field.parent.model.documentType)"
        },
        "otherElectronicVersions": {
          "title": "Other electronic versions",
          "type": "array",
          "items": {
            "title": "Other electronic version",
            "type": "object",
            "required": [
              "publicNote",
              "url"
            ],
            "additionalProperties": false,
            "properties": {
              "publicNote": {
                "title": "Public note",
                "type": "string",
                "minLength": 1,
                "form": {
                  "placeholder": "Example: Published version"
                }
              },
              "url": {
                "title": "URL",
                "type": "string",
                "minLength": 1,
                "pattern": "^https?://.+"
              }
            }
          }
        },
        "specificCollections": {
          "title": "Specific collections",
          "description": "The names of the organisation's specific/patrimonial collections to which this document belongs",
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "classification": {
          "$ref": "classification-v1.0.0.json"
        },
        "abstracts": {
          "title": "Abstracts",
          "type": "array",
          "items": {
            "title": "Abstract",
            "type": "object",
            "required": [
              "language",
              "abstract"
            ],
            "additionalProperties": false,
            "propertiesOrder": [
              "language",
              "abstract"
            ],
            "properties": {
              "language": {
                "$ref": "language-v1.0.0.json"
              },
              "abstract": {
                "title": "Abstract",
                "type": "string",
                "minLength": 1,
                "form": {
                  "type": "textarea",
                  "rows": 3
                }
              }
            }
          }
        },
        "subjects": {
          "title": "Subjects",
          "type": "array",
          "items": {
            "title": "Subject",
            "type": "object",
            "required": [
              "language",
              "subjects"
            ],
            "additionalProperties": false,
            "propertiesOrder": [
              "language",
              "subjects"
            ],
            "properties": {
              "language": {
                "$ref": "language-v1.0.0.json"
              },
              "subjects": {
                "title": "Subjects",
                "type": "array",
                "minItems": 1,
                "default": [],
                "items": {
                  "type": "string",
                  "minLength": 1
                }
              }
            }
          }
        },
        "dissertation": {
          "title": "Dissertation",
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "degree": {
              "title": "Degree",
              "type": "string",
              "minLength": 1
            },
            "jury_note": {
              "title": "Jury note",
              "type": "string",
              "minLength": 1
            },
            "grantingInstitution": {
              "title": "Granting institution",
              "type": "string",
              "minLength": 1
            },
            "date": {
              "title": "Date",
              "type": "string",
              "pattern": "^[0-9]{4}(-[0-9]{2}-[0-9]{2})?$",
              "form": {
                "placeholder": "Example: 2019 or 2019-05-05"
              }
            }
          },
          "propertiesOrder": [
            "degree",
            "grantingInstitution",
            "date",
            "jury_note"
          ],
          "required": [
            "degree"
          ],
          "hideExpression": "!['coar:c_46ec', 'coar:c_7a1f', 'coar:c_db06', 'coar:c_bdcc', 'habilitation_thesis', 'advanced_studies_thesis', 'other'].includes(field.parent.model.documentType)"
        }
      }
    },
    "contributors": {
      "title": "Contributors",
      "type": "array",
      "minItems": 1,
      "default": [
        {}
      ],
      "items": {
        "title": "Contributor",
        "type": "object",
        "required": [
          "name",
          "role"
        ],
        "propertiesOrder": [
          "name",
          "affiliation",
          "role",
          "orcid"
        ],
        "properties": {
          "name": {
            "title": "Name",
            "description": "Last name, first name, ex: Doe, John",
            "type": "string",
            "minLength": 1
          },
          "affiliation": {
            "title": "Affiliation",
            "type": "string",
            "minLength": 1
          },
          "role": {
            "title": "Role",
            "type": "string",
            "default": "cre",
            "enum": [
              "dgs",
              "prt",
              "cre",
              "edt",
              "ctb"
            ],
            "form": {
              "options": [
                {
                  "label": "contribution_role_cre",
                  "value": "cre"
                },
                {
                  "label": "contribution_role_ctb",
                  "value": "ctb"
                },
                {
                  "label": "contribution_role_edt",
                  "value": "edt"
                },
                {
                  "label": "contribution_role_dgs",
                  "value": "dgs"
                },
                {
                  "label": "contribution_role_prt",
                  "value": "prt"
                }
              ]
            }
          },
          "orcid": {
            "title": "ORCID",
            "type": "string",
            "minLength": 1,
            "pattern": "^[0-9]{4}-[0-9]{4}-[0-9]{4}-[0-9]{4}$",
            "form": {
              "placeholder": "Example: 1111-2222-3333-4444"
            }
          }
        }
      }
    },
    "diffusion": {
      "type": "object",
      "properties": {}
    },
    "document": {
      "title": "Document",
      "description": "Document created on basis of this deposit.",
      "type": "object",
      "required": [
        "$ref"
      ],
      "additionalProperties": false,
      "properties": {
        "$ref": {
          "type": "string",
          "minLength": 1,
          "pattern": "^https://sonar.ch/api/documents/.*?$"
        }
      }
    }
  }
}
