{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://sonar.ch/schemas/deposits/deposit-v1.0.0.json",
  "title": "SONAR deposit v1.0.0",
  "type": "object",
  "required": ["pid"],
  "properties": {
    "$schema": {
      "type": "string",
      "default": "https://sonar.ch/schemas/deposits/deposit-v1.0.0.json"
    },
    "pid": {
      "title": "Deposit identifier",
      "description": "Deposit persistent identifier.",
      "type": "string"
    },
    "_bucket": {
      "title": "Bucket UUID",
      "description": "Bucket UUID used to store files",
      "type": "string"
    },
    "user": {
      "title": "User",
      "description": "User who deposits the document.",
      "type": "object",
      "properties": {
        "$ref": {
          "title": "User",
          "type": "string",
          "pattern": "^https://sonar.ch/api/users/.*?$"
        }
      }
    },
    "status": {
      "title": "Status",
      "description": "Status of the deposit.",
      "type": "string",
      "default": "in progress",
      "enum": ["in progress", "to validate", "validated", "rejected"]
    },
    "step": {
      "title": "Step",
      "description": "Current cataloguing step.",
      "type": "string",
      "enum": ["create", "metadata", "contributors", "projects", "diffusion"]
    },
    "metadata": {
      "type": "object",
      "required": ["languages", "title"],
      "propertiesOrder": [ "document_type", "languages", "title", "publication_date", "journal", "abstracts", "etc" ],
      "properties": {
        "document_type": {
          "title": "Type of document",
          "description": "Type of document",
          "type": "string",
          "default": "preprint",
          "enum": [
            "preprint",
            "postprint"
          ]
        },
        "languages": {
          "title": "Languages",
          "description": "Languages for the document",
          "type": "array",
          "minItems": 1,
          "uniqueItems": true,
          "items": {
            "type": "string",
            "default": "fre",
            "enum": [
              "fre",
              "ger",
              "eng",
              "ita",
              "spa",
              "ara",
              "chi",
              "lat",
              "heb",
              "jpn",
              "por",
              "rus"
            ]
          }
        },
        "title": {
          "title": "Title",
          "description": "Title of the document.",
          "type": "string",
          "minLength": 1
        },
        "publication_date": {
          "title": "Publication date",
          "description": "Publication date of the document.",
          "type": "object",
          "properties": {
            "type": {
              "title": "Type",
              "description": "Type of the publication date.",
              "type": "string",
              "default": "simple",
              "enum": ["simple"]
            },
            "value": {
              "title": "Date",
              "description": "Date value of the publication date.",
              "type": "string",
              "template": {
                "type": "date"
              }
            }
          }
        },
        "journal": {
          "title": "Journal",
          "description": "Journal in which the publication is published.",
          "type": "object",
          "properties": {
            "name": {
              "title": "Name",
              "description": "Name of the journal.",
              "type": "string"
            },
            "volume": {
              "title": "Volume",
              "description": "Volume of the journal.",
              "type": "string"
            },
            "number": {
              "title": "Number",
              "description": "Number of the journal.",
              "type": "string"
            },
            "pages": {
              "title": "Pages",
              "description": "Pages of the journal.",
              "type": "string"
            }
          }
        },
        "abstracts": {
          "title": "Abstracts",
          "description": "Abstracts for the document",
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1,
            "template": {
              "type": "textarea",
              "rows": 3
            }
          }
        },
        "etc": {
          "title": "ETC.",
          "default": "",
          "type": "string"
        }
      }
    },
    "contributors": {
      "title": "Contributors",
      "description": "Contributors of the document.",
      "type": "array",
      "minItems": 1,
      "default": [{}],
      "items": {
        "title": "Contributor",
        "type": "object",
        "required": ["name"],
        "propertiesOrder": [ "name", "affiliation", "orcid" ],
        "properties": {
          "name": {
            "title": "Name",
            "description": "Contributor name.",
            "type": "string"
          },
          "affiliation": {
            "title": "Affiliation",
            "description": "Affiliation of the contributor",
            "type": "string"
          },
          "orcid": {
            "title": "ORCID",
            "description": "ORCID of the contributor.",
            "type": "string"
          }
        }
      }
    },
    "projects": {
      "title": "Projects",
      "description": "Projects related to the document.",
      "type": "array",
      "items": {
        "title": "Project",
        "type": "object",
        "required": ["name", "start_date"],
        "propertiesOrder": [ "name", "start_date", "end_date", "funding_organisation", "related_persons" ],
        "properties": {
          "name": {
            "title": "Name",
            "description": "Name of the project.",
            "type": "string"
          },
          "start_date": {
            "title": "Start date",
            "description": "Start date of the project.",
            "type": "string",
            "template": {
              "type": "date"
            }
          },
          "end_date": {
            "title": "End date",
            "description": "End date of the project.",
            "type": "string",
            "template": {
              "type": "date"
            }
          },
          "funding_organisation": {
            "title": "Funding organisation",
            "description": "Funding organisation.",
            "type": "string"
          },
          "related_persons": {
            "title": "Related persons",
            "description": "Persons involved in the project.",
            "type": "array",
            "items": {
              "type": "object",
              "required": ["type", "name"],
              "propertiesOrder": [ "type", "name", "affiliation", "orcid" ],
              "properties": {
                "type": {
                  "title": "Type",
                  "description": "Type of the person.",
                  "type": "string",
                  "default": "principal investigator",
                  "enum": ["principal investigator"]
                },
                "name": {
                  "title": "Name",
                  "description": "Name of the person.",
                  "type": "string"
                },
                "affiliation": {
                  "title": "Affiliation",
                  "description": "Affiliation of the person",
                  "type": "string"
                },
                "orcid": {
                  "title": "ORCID",
                  "description": "ORCID of the person.",
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "diffusion": {
      "title": "Diffusion",
      "description": "Diffusion information related to the document.",
      "type": "object",
      "properties": {
        "license": {
          "title": "License",
          "description": "License of the document.",
          "type": "string",
          "default": "Rights reserved",
          "enum": ["Rights reserved"]
        }
      }
    }
  }
}
